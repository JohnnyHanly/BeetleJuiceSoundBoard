<?xml version="1.0" encoding="utf-8"?>


    <!-- TODO: Update blank fragment layout -->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/b_me"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:text="ME?"
        android:backgroundTint="@color/classicColor"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha=".5"
        android:textColor="@color/white"
        app:layout_constraintRight_toLeftOf="@id/b_coobee"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <Button
        android:id="@+id/b_coobee"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/classicColor"
        android:layout_alignStart="@+id/b_vomit"
        android:text="COO BEE"
        android:textColor="@color/white"
        android:alpha=".5"
        app:layout_constraintLeft_toRightOf="@id/b_me"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <Button
        android:id="@+id/b_red"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/classicColor"
        android:text="SPELL RED"
        android:textColor="@color/white"
        android:alpha=".5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_vomit"
        app:layout_constraintTop_toBottomOf="@id/b_me" />

    <Button
        android:id="@+id/b_vomit"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:text="VOMITTING"
        android:alpha=".5"
        android:textColor="@color/white"
        android:backgroundTint="@color/classicColor"
        app:layout_constraintLeft_toRightOf="@id/b_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_coobee" />

    <Button
        android:id="@+id/b_age"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:alpha=".5"
        android:backgroundTint="@color/classicColor"
        android:text="I'M 45 BABY"
        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_weight"
        app:layout_constraintTop_toBottomOf="@id/b_red" />

    <Button
        android:id="@+id/b_weight"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/classicColor"
        android:layout_alignStart="@+id/b_vomit"
        android:alpha=".5"
        android:textColor="@color/white"
        android:text="I'm 250 POUNDS"
        app:layout_constraintLeft_toRightOf="@id/b_age"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_vomit" />
    <Button
        android:id="@+id/b_spanish"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:alpha=".5"
        android:backgroundTint="@color/classicColor"
        android:text="SPANISH"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_chinese"
        app:layout_constraintTop_toBottomOf="@id/b_age" />

    <Button
        android:id="@+id/b_chinese"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/classicColor"
        android:layout_alignStart="@+id/b_spanish"
        android:alpha=".5"
        android:textColor="@color/white"
        android:text="CHINESE"
        app:layout_constraintLeft_toRightOf="@id/b_age"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_weight" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="87dp"
        android:orientation="horizontal"/>


</android.support.constraint.ConstraintLayout>