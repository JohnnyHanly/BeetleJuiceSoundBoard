<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/b_laughter"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="LAUGHTER"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_ifuck"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <Button
        android:id="@+id/b_ifuck"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="I FUCK 24 HOURS A DAY"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/b_laughter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <Button
        android:id="@+id/b_crack"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="I SMOKE COKE"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_lose"
        app:layout_constraintTop_toBottomOf="@id/b_laughter" />

    <Button
        android:id="@+id/b_lose"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="I YOU LOSE YOU WIN"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/b_crack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_ifuck" />

    <Button
        android:id="@+id/b_drugs"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="DRUGS? NEVER."
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_women"
        app:layout_constraintTop_toBottomOf="@id/b_crack" />
    <Button
        android:id="@+id/b_women"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="I MAKE WOMENS HAPPY"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/b_drugs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_lose" />
    <Button
        android:id="@+id/b_diet"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="MY DIET IS 250 GRAND"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_hell"
        app:layout_constraintTop_toBottomOf="@id/b_drugs" />
    <Button
        android:id="@+id/b_hell"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="HELL NO"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/b_diet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_women" />
    <Button
        android:id="@+id/b_tough"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="I'M IS TOUGH"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b_weight"
        app:layout_constraintTop_toBottomOf="@id/b_diet" />
    <Button
        android:id="@+id/b_weight"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:backgroundTint="#8a239e"
        android:text="I WEIGH 250 POUNDS"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/b_tough"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_hell" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="67dp"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
